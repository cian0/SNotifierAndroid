<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cian0.SNotifier"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
	<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="com.cian0.SNotifier.PSENotifierApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name="com.cian0.SNotifier.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
       	<provider
       	    android:exported="false"
			android:name=".model.MainContentProvider"
	    	android:authorities="com.cian0.SNotifier" >
	  	</provider>
	  	<service
			android:name="com.cian0.SNotifier.services.PSEDataServiceController"
			android:icon="@drawable/ic_launcher"
			android:label="@string/service_name"
			android:enabled="true"
			>
		</service> 
		<service
			android:name="com.cian0.SNotifier.services.PSEFetchIntentService"
			android:icon="@drawable/ic_launcher"
			android:label="@string/service_name"
			android:enabled="true"
			>
		</service> 
		
       	
    </application>

</manifest>
